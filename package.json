{
  "name": "spinder",
  "description": "The fun way to discover Spotify music.",
  "version": "1.0.0",
  "engines": {
    "node": "20.x"
  },
  "type": "module",
  "scripts": {
    "start": "node ./dist/app.js",
    "build": "tsc",
    "dev": "npm run build && node ./dist/app.js",
    "dev-watch": "npm run watch:code",
    "watch:code": "nodemon --watch src -e js,ts,json,css,html --exec \"npm run dev\""
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/randomstring": "^1.1.11",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "node-color-log": "^11.0.1",
    "randomstring": "^1.3.0",
    "uuid": "^9.0.1"
  }
}
